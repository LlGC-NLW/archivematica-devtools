#!/bin/bash

prefix="@PREFIX@"

case $1 in
	'')
		echo "Usage: am <tool>"
		echo "To list all tools: am ls-tools"
		exit 1
		;;
	ls-tools)
		ls "$prefix" 2>/dev/null
		;;
	*)
		tool="$prefix/$1"
		shift 1 # so we don't pass on the tool name to the tool itself
		test -x "$tool" && exec "$tool" "$@"
		echo "Tool not found: $1" && exit 1
		;;
esac
